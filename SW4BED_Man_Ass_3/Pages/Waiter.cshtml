@page
@model SW4BED_Man_Ass_3.Pages.WaiterModel

@{
    ViewData["Title"] = "Waiter";
}

<h1>Waiter</h1>

<h4>Guest</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Guest.guestName" class="control-label"></label>
                <input asp-for="Guest.guestName" class="form-control" />
                <span asp-validation-for="Guest.guestName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Guest.age" class="control-label"></label>
                <input asp-for="Guest.age" class="form-control" />
                <span asp-validation-for="Guest.age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Guest.roomNumber" class="control-label"></label>
                <input asp-for="Guest.roomNumber" class="form-control" />
                <span asp-validation-for="Guest.roomNumber" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Guest.hasReserved" /> @Html.DisplayNameFor(model => model.Guest.hasReserved)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Guest.hasCheckedIn" /> @Html.DisplayNameFor(model => model.Guest.hasCheckedIn)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
