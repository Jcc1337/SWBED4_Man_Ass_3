@page
@model SW4BED_Man_Ass_3.Pages.KitchenModel

@{
    ViewData["Title"] = "Kitchen";
}

<div class="border border-primary rounded">

    <form class="mx-4 mt-4" method="post">
        <div class="form-group d-flex mb-4">
            <input class="form-control" type="date" data-val="true" asp-for="Date" />
            <button type="submit" class="btn btn-primary">Update</button>
        </div>
    </form>

    <div class=" d-flex justify-content-center">

        <div class="m-4">
            <h3>Expected guests:</h3>
            <h4>Adults</h4>
            @Html.DisplayFor(x => x.adultsExpected)
            <h4>Children</h4>
            @Html.DisplayFor(x => x.childrenExpected)
            <h4>Total</h4>
            @Html.DisplayFor(x => x.totalExpected)
        </div>
        <div class="m-4">
            <h3>Guests checked in:</h3>
            <h4>Adults</h4>
            @Html.DisplayFor(x => x.adultsCheckedIn)
            <h4>Children</h4>
            @Html.DisplayFor(x => x.childrenCheckedIn)
        </div>
    </div>
    <div class="text-center my-4">
        <img width="400" src="~/G1Bg.gif" />
    </div>
</div>